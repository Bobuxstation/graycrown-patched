{
  "name": "graycrown",
  "version": "0.9.2",
  "description": "a simple game launcher",
  "homepage": "https://graycrown.hstn.me",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "win": "electron-builder --win"
  },
  "browser": {
    "child_process": true
  },
  "keywords": [
    "game",
    "launcher",
    "games"
  ],
  "author": "zeankun.dev <zeanfender11@gmail.com>",
  "license": "GPL-3.0",
  "build": {
    "appId": "com.zeankundev.graycrown",
    "productName": "Graycrown",
    "copyright": "Copyright Â© 2022 zeankun.dev",
    "icon": "build/icons/512x512.png",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "publisherName": "zeankun.dev"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage",
        "snap"
      ],
      "maintainer": "zeankun.dev",
      "category": "Game",
      "icon": "./build/icons/512x512.png"
    }
  },
  "devDependencies": {
    "electron": "^20.1.4",
    "electron-builder": "^20.44.4"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "adm-zip": "^0.5.9",
    "download": "^8.0.0",
    "electron-reloader": "^1.2.3",
    "node-notifier": "^10.0.1",
    "nodejs-file-downloader": "^4.10.2",
    "webpack": "^5.74.0"
  }
}
